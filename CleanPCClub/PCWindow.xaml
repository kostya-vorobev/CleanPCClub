<Window x:Class="CleanPCClub.PCWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CleanPCClub"
        xmlns:control = "clr-namespace:CleanPCClub"
        mc:Ignorable="d"
        Title="Компьютеры" Height="450" Width="940">
    <Grid Background="#FF515151">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Margin="0,0,0,6">
            <Button Content="Назад" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Label Content="Управление компьютерами" Margin="0" VerticalAlignment="Center" Foreground="White" FontSize="16"  Width="276" HorizontalAlignment="Right"/>
        </DockPanel>

        <WrapPanel x:Name="stackPanelPC" Margin="10,70,10,10" HorizontalAlignment="Stretch" Orientation="Horizontal" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.RowSpan="2"/>

    </Grid>
</Window>
